{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "pnpm --color --reporter-hide-prefix run \"/^dev:.*/\" ",
    "dev:server": "tsx watch --inspect=0.0.0.0 src/index.ts",
    "dev:types": "tsup src/index.ts --clean --dts-only --watch",
    "build": "pnpm --silent run lint && tsx build.ts",
    "lint": "tsc && eslint --max-warnings=0 src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@repo/shared": "workspace:*",
    "hono": "^4.6.2"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^22.5.5",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.1",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1"
  }
}

{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["APP_NAME", "PORT", "BACKEND_URL"],
  "tasks": {
    "dev": { "persistent": true, "cache": false },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"]
    },
    "lint": { "dependsOn": ["^lint"] },
    "clean": { "cache": false }
  }
}

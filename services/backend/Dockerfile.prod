FROM node:18.12.1-alpine3.15 as builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

FROM node:18.12.1-alpine3.15 

ENV NODE_PATH=dist/
ENV NODE_ENV=production
ENV PORT=80

COPY package*.json ./
RUN npm ci --omit=dev

COPY --from=builder /app/dist ./dist

EXPOSE 80
CMD ["npm", "start"]